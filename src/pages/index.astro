---
import "@/styles/global.css"
import { uniqueYears } from "@/lib/artworks";
---

<html>
  <head>
    <meta charset="UTF-8">
    <title>Artwork Archive | IntoEkinZone</title>
  </head>
  <body class="p-8">
    <h1 class="text-6xl text-mustard font-bold mb-4">Artwork Archive</h1>
    <ul class="space-y-2">
      {uniqueYears.map((year) => (
        <li>
          <a class="text-2xl white hover:underline" href={`/${year}`}>
            {year}
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>